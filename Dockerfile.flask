# Dockerfile para Flask App
FROM python:3.11-slim

WORKDIR /app

# Copiar requirements
COPY requirements-docker.txt .
RUN pip install --no-cache-dir -r requirements-docker.txt

# Copiar c√≥digo
COPY flask_web_app/ flask_web_app/
COPY config/ config/
COPY logs/ logs/
COPY .env .

# Variables de entorno
ENV PYTHONPATH=/app

# Exponer puerto
EXPOSE 5000

# Comando de inicio
CMD ["python", "flask_web_app/app.py"]
